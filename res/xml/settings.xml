<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
            
      <PreferenceCategory 
          android:title="Macro Settings"
          android:key="prefCatMacroSettings" >
    
	      <SwitchPreference
	          android:defaultValue="false"
	          android:key="prefCaseSensitive"
	          android:title="Case sensitive"
	          android:summary="Force macros to be case sensitive" />
	      
	      <SwitchPreference
	          android:defaultValue="false"
	          android:key="prefIgnorePassword"
	          android:title="Ignore Passwords"
	          android:summary="Don't expand macros in password fields" />
      
      </PreferenceCategory>
      
      <PreferenceCategory 
          android:title="Import/Export"
          android:key="prefCatImportExport" >
      
	      <Preference
	          android:key="prefImportMacros"
	          android:title="Import Macros"
	          android:summary="Tap to select file to import macros" />      
	      
	      <Preference
	          android:key="prefExportMacros"
	          android:title="Export Macros"
	          android:summary="Tap to export/backup macro list" />
	      
	  </PreferenceCategory>

